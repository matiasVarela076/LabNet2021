@model List<Ejercicio4.EF.MVC.Models.ProductsView>
@{
    ViewBag.Title = "Lista de Productos";
}
<h1>Lista de Productos</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Acción</th>
            <th>Acción</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <th scope="row">@producto.ID</th>
                <td>@producto.NombreProdu</td>
                <td>@producto.Precio</td>
                <td>@Html.ActionLink("Borrar", "Delete", new { id = producto.ID }, new { onclick = "return confirm('Esta seguro que desea borrar?')" }) </td>
                <td>@Html.ActionLink("Modificar", "Insert") </td>
            </tr>
        }
    </tbody>
</table>
<div>@Html.ActionLink("Insertar nuevo Producto", "Insert")</div>
